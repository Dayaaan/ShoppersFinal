{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mainimage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ mainImage.id }}</td>
            </tr>
            <tr>
                <th>Imagename</th>
                <td>{{ mainImage.imageName }}</td>
            </tr>
            <tr>
                <th>Imagesize</th>
                <td>{{ mainImage.imageSize }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if mainImage.updatedAt %}{{ mainImage.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mainimage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('mainimage_edit', { 'id': mainImage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
